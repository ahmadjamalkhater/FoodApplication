@{
    ViewData["Title"] = "Recipe";
}
@model Dictionary<string, List<Recipe>>
    <div class="row mb-4">
        <div class="col-12">
            @Html.Partial("_SearchBar")
        </div>
    </div>
    <div class="row ">
        <div class="col-2">
            <div class="shadow rounded position-sticky " id="recipe-list" >
                <div class="border-bottom border-3 p-2 ">
                    <h4 class="text-pink text-center fst-italic">Recipes</h4>
                    @Html.Partial("_SideMenu")
                </div>
            </div>
        </div>
        <div class="col-10">
            @foreach (var item in Model)
            {
                <div class="mb-3">

                    <h4 class="text-dark">@item.Key</h4>
                    <div class="row">
                        @Html.Partial("_RecipeCard",item.Value)
                    </div>
                </div>
            }
            
       
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

